# AutoStack Environment Configuration for 10 Users
NODE_ENV=production
JWT_SECRET=${jwt_secret}

# SQLite Database (file-based, no external DB needed)
DATABASE_URL=sqlite:///app/data/autostack.db

# In-memory cache (no Redis needed for 10 users)
REDIS_URL=memory://

# AWS Configuration (user provides their own)
AWS_REGION=us-west-2
TERRAFORM_STATE_BUCKET=autostack-terraform-state

# Service URLs (internal Docker network)
CODE_ANALYSIS_SERVICE_URL=http://code-analysis:8000
INFRASTRUCTURE_SERVICE_URL=http://infrastructure-service:8001
DEPLOYMENT_SERVICE_URL=http://deployment-service:8002

# API Configuration
PORT=3000
API_BASE_URL=http://localhost:3000

# Logging
LOG_LEVEL=info

# Rate limiting (reduced for 10 users)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# File upload limits (reduced)
MAX_FILE_SIZE=10MB
MAX_FILES_PER_UPLOAD=10